<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tarea05DDI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:textViewStyle">@style/TextViewsStyle</item>
    </style>

    <style name="Theme.Tarea05DDI" parent="Base.Theme.Tarea05DDI" />

    <!-- Estilo para el editText -->
    <style name="EditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textSize">40sp</item>
        <item name = "android:gravity">end</item>
    </style>


    <!-- Estilo para todos los textView -->
    <style name="TextViewsStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/green</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>


    <!-- Estilo para el textView 2 -->
    <style name="TextView2Style" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@color/orange</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Estilo para el botón 1 -->
    <style name="ButtonFABStyle" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="android:backgroundTint">@color/yellow</item>
    </style>

    <!-- El botón 2 tiene el estilo por defecto de la aplicación -->
</resources>